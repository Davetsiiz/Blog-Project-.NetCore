<div class="tech-btm">
	<h3 >Bültene Abone Ol</h3>
	<p>Teknoloji ve Yazılım Hakkında Her Şey </p>
	<form method="post">
		<input type="email" placeholder="Email" id="txtmail" required="" name="Mail">
		<input type="submit" id="btn" value="Abone OL">
	</form>

</div>

<script type="text/javascript">
	$("#btn").click(function () {
		let values = {
			Mail: $("#txtmail").val()
		};

		$.ajax({
			type: "post",
			url: "/NewsLetter/SubscribeMail/",
			data: values,
			success: function (func) {
				let result = jQuery.parseJSON(func);
			}
		});
	});
</script>
