@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card ">
    <div class="card">
        <h1 class="card-title " style="text-align:center ">Yeni Blog Girişi</h1>
        <div class="card-body">
            @using (Html.BeginForm("CategoryAdd", "Category", FormMethod.Post))
            {
                @Html.Label("Kategori Adı")
                @Html.TextBoxFor(x=>x.CategoryName,new {@class="form-control"})
                @Html.ValidationMessageFor(x=>x.CategoryName,"", new {@class="text-danger"})
                <br />
                @Html.Label("Kategori Açıklaması")
                @Html.TextAreaFor(x=>x.CategoryDesciption,3,7,new {@class="form-control"})
                @Html.ValidationMessageFor(x=>x.CategoryDesciption,"", new {@class="text-danger"})
                <br />
                <button style="text-align:center" type="submit" class="btn btn-primary submit mb-4">Ekle</button>
            }
            
        </div>
    </div>
</div>

